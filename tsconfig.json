{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@app/api": ["api"],
			"@app/components": ["components"],
			"@app/pages": ["pages"],
			"@app/constants": ["constants"],
			"@app/hooks": ["hooks"],
			"@app/styles": ["styles"],
			"@app/types": ["types"],
			"@app/store": ["store"],
			"@app/utils": ["utils"],
			"@feature/animation-player": ["features/animation-player"]
		},
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"incremental": true
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts", "**/*.tsx"]
}
