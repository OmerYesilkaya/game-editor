{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@app/api": ["api"],
            "@app/components": ["components"],
            "@app/constants": ["constants"],
            "@app/hooks": ["hooks"],
            "@app/store": ["store"],
            "@app/types": ["types"],
            "@app/utils": ["utils"],
            "@app/canvas": ["canvas"],

            "@core/*": ["core/*"]
        },
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017", "ES2021.String"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}
